<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".Diseases">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/card"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
android:layout_marginTop="20dp"
        android:background="@drawable/drop_shadow"


        >


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:background="@drawable/doc_logo" />

    </android.support.v7.widget.CardView>
   <LinearLayout
       android:id="@+id/fistlout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/card"
       android:layout_centerHorizontal="true"
       android:orientation="vertical"
       >
       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"


           android:textColor="#000000"
           android:textSize="25dp"
           android:textStyle="bold"
          />
       <TextView
           android:id="@+id/practice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"


           android:textColor="@color/darkgray"
           android:textSize="15dp"
           android:layout_gravity="center"


           />

   </LinearLayout>
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"

        android:layout_marginLeft="8dp"
        android:layout_below="@id/fistlout"
        />
    <LinearLayout
        android:id="@+id/secondout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fistlout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#008000"
            android:text="Open Now: "
            android:textStyle="bold"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="9:30AM-10:00PM"

            />



    </LinearLayout>

    <Button
        android:id="@+id/bookappointment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
android:textAllCaps="false"
        android:layout_marginTop="10dp"
      android:textSize="20dp"
        android:layout_below="@id/secondout"
android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:text="Book An Appointment" />

</RelativeLayout>